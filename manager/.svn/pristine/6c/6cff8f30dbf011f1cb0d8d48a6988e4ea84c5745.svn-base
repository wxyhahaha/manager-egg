<template>
    <div>
        <div class="input_box">
            <Input v-model="searchData.userId" class="input">
                <span slot="prepend">用户编号</span>
            </Input>
            <Input v-model="searchData.mobilePhone" class="input">
                <span slot="prepend">手机号码</span>
            </Input>
            <Input v-model="searchData.province" class="input">
                <span slot="prepend">省份</span>
            </Input>
            <Input v-model="searchData.city" class="input">
                <span slot="prepend">城市</span>
            </Input>
            <div class="tiemPick_box">
            <label for="" class="label">注册时间</label> <DatePicker type="datetimerange" placeholder="Select date and time" style="width: 300px" @on-change="timeChange">
            </DatePicker>
            </div>

        </div>

    <Button type="primary" @click="search" >查询</Button>
    <br>
   
    <Table border :columns="columns12" :data="dataList" class="ytable" :loading="loading">
        <template slot-scope="{ row }" slot="userId">
            <strong>{{ row.userId }}</strong>
        </template>
        <template slot-scope="{ row, index }" slot="action">
            <Button type="primary" size="small" style="margin-right: 5px" @click="show(index)">查看</Button>
            <Button type="error" size="small" @click="remove(index)">删除</Button>
        </template>
        
    </Table>
    <Page :total="totalRow" :page-size="10" @on-page-size-change="pageSizeChange" @on-change="pageChange" show-sizer />
    </div>




    
</template>
<script>
    export default {
        data () {
            return {
                searchData:{
                    userId:undefined,
                    mobilePhone:undefined,
                    province:undefined,
                    city:undefined,
                    dateAdd:undefined,
                    dateUpdate:undefined,
                    page:1,
                    pageSize:10
                },
                totalRow:undefined,
                loading:true,
                columns12: [
                    {
                        title: '用户编号',
                        slot: 'userId'
                    },
                    {
                        title: '用户名',
                        key: 'username'
                    },
                    {
                        title: '手机号码',
                        key: 'mobilePhone'
                    },
                    {
                        title: '年龄',
                        key: 'age'
                    },
                    {
                        title: '省份',
                        key: 'province'
                    },
                    {
                        title: 'Action',
                        slot: 'action',
                        width: 150,
                        align: 'center'
                    }
                ],
                dataList: [ ]
            }
        },
        mounted(){
            try{

            }catch(e){
                
            }
            this.fitchData()
        },
        methods: {
            show (index) {
                this.$Modal.info({
                    title: '用户信息',
                    content: `Name：${this.dataList[index].name}<br>Age：${this.dataList[index].age}<br>Address：${this.dataList[index].address}`
                })
            },
            remove (index) {
                
                this.confirm('确定要删除？','删除用户后无法恢复',()=>{
                let id = this.dataList[index].id
                this.loading =true
                return this.$axios.post('http://localhost:7001/manager/user/del',{id:id}).then((res)=>{
                    if(res.data.code == 0){
                        this.loading = false
                        this.fitchData()
                        this.$Message.success('删除成功');
                        
                    }
                }).catch((res)=>{
                    console.log(res)
                })
                })

            },
            pageChange(page){
                this.searchData.page = page
                this.fitchData()
            },
            pageSizeChange(pageSize){
                this.searchData.pageSize = pageSize;
                this.fitchData()
            },
            fitchData(){
            let searchData = this.searchData
            this.loading=true
            
            return this.$axios.post('http://localhost:7001/manager/user/list',searchData).then((res)=>{
                if(res.data.code ==0){
                    this.loading=false
                    console.log(res)
                    this.totalRow = res.data.result.totalRow
                    this.dataList = res.data.result.data
                }
                else{
                    this.$Loading.error();
                }

            }).catch((res)=>{
                this.$Loading.error();
                console.log(res)
            })
            },
            timeChange(e){
                this.searchData.dateAdd = e[0];
                this.searchData.dateUpdate = e[1]
            },
            search(){
                this.fitchData();
            },
            confirm (title, content, fn) {
                this.$Modal.confirm({
                    title: title,
                    content: content,
                    onOk: () => {
                        fn()
                    },
                    onCancel: () => {
                        this.$Message.info('取消');
                    }
                });
            },
        }
    }
</script>
